{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/app/*": ["./app/*"],
      "@/assets/*": ["./assets/*"],
      "@/components/*": [ "./components/*"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/enums/*": ["./enums/*"],
      "@/features/*": ["./features/*"],
      "@/helpers": ["./helpers/index.ts"],
      "@/hooks/*": ["./hooks/*"],
      "@/lib/*": ["./lib/*"],
      "@/styles/*": ["./styles/*"],
      "@/types/*": ["./types/*"],
      "@/utils": ["./utils/index.ts"],
      "#*": ["./features/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "tailwind.config",
    "next.config.js",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
